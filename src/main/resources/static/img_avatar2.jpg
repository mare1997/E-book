	<div class="modal fade" id="AddNewEBook">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <!-- header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h3 class="modal-title">Add new e-book</h3>
                    </div>
                    <div class="modal-header">
                        <div class="form-group">
                            <ul>
                                <li>
                                	<form method="POST" enctype="multipart/form-data" id="fileUploadForm">
                                	<input type="file" name="files" id="fileA" onchange="getMetadata()"/><br/>
                                	<label>Title*:</label><input type="text" name="title" id="titleA" class="form-control"  required/><br/>
                                	<label>KeyWords:</label><input type="text" name="keywords" id="keywordsA" class="form-control"  /><br/>
                                	<label>Author*:</label><input type="text" name="author" id="authorA" class="form-control"  required/>
                                	</form>
                                </li>
                                <li><label>FileName*:</label><input type="text" name="filename" id="filenameA" class="form-control"  required/></li>
                                <li><label>Publication year*:</label><input type="text" name="year" id="yearA" class="form-control"  required/></li>
                                <li><label>Mime:</label><input type="text" name="mime" id="mimeA" class="form-control"  /></li>
                                
                                <li>
                                	<label for="categorySelectAdd">Category:</label>
                                	<select id="categorySelectAdd">
                                		
                                	</select>
                                </li>
                                <li>
                                	<label for="languageSelectAdd">Language:</label>
                                	<select id="languageSelectAdd">
                                		
                                	</select>
                                </li>
                                
							</ul>
                            
                       </div>
                    </div>
                    <!-- footer -->
                    <div class="modal-footer">
                        <button class="btn btn-danger btn-block"  onclick="addNewEBook()">Submit</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>   
    <div class="modal fade" id="EditNewEBook">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <!-- header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h3 class="modal-title">Edit e-book</h3>
