                            	<li><label>Password*:</label><input type="text" name="password" id="passwordP" class="form-control"  required/></li>
                            	<li><label>Confrim Password*:</label><input type="text" name="cpassword" id="cpasswordCP" class="form-control"  required/></li>
                                
                            </ul>
                            
                       </div>
                    </div>
                    <!-- footer -->
