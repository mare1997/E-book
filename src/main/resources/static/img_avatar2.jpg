	<div class="modal" id="deleteEbookModal" role="dialog" >
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                    </div>
                    <div class="modal-body" id="deleteBody">Select "Delete" below if you are want to delete this book.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal" id="cancel">Cancel</button>
                        <a class="btn btn-danger" id="deleteBtn" onclick="deleteEbook()">Delete</a>
                    </div>
                </div>
            </div>
        </div>     
