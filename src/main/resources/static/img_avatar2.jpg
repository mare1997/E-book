                    <div class="modal-header">
                        <div class="form-group">
                             <ul>
                                <li>
                                	
                                	<!-- <input type="file" name="files" id="fileE" onchange="getMetadataEdit()"/><br/> -->
                                	<label>Title*:</label><input type="text" name="title" id="titleE" class="form-control"  required/><br/> </li>
                                <li>	<label>KeyWords:</label><input type="text" name="keywords" id="keywordsE" class="form-control"  /><br/></li>
                                <li>	<label>Author*:</label><input type="text" name="author" id="authorE" class="form-control"  required/> </li>
                                	
                               
                                <li><label>FileName*:</label><input type="text" name="filename" id="filenameE" class="form-control"  required/></li>
                                <li><label>Publication year*:</label><input type="text" name="year" id="yearE" class="form-control"  required/></li>
                                <li><label>Mime:</label><input type="text" name="mime" id="mimeE" class="form-control"  /></li>
                                
                                <li>
                                	<label for="categorySelectEdit">Category:</label>
                                	<select id="categorySelectEdit">
                                		
                                	</select>
                                </li>
                                <li>
                                	<label for="languageSelectEdit">Language:</label>
                                	<select id="languageSelectEdit">
                                		
                                	</select>
